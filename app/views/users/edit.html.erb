<% provide(:title, "Editar usuario") %>
<h1>Actualiza tu perfil</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'campos', f: f %>
			<%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
		<% end %>

		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails">change</a>
	</div>
</div>

